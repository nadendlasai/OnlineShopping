@{
    ViewData["Title"] = "Sign Up";
    ViewBag.HideHeader = true;
    ViewBag.DarkBackground = true;
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow p-4" style="width: 420px; border-radius: 16px;">

        <div class="text-center mb-4">
            <img src="~/images/ShoppingLogo.png" alt="Logo" style="height:70px;">
            <h3 class="mt-3">Create Account</h3>
            <p class="text-muted mb-1">Join us and start shopping!</p>
        </div>

        <h4 class="text-center mb-3">Sign Up</h4>

        <form id="registerForm">
            <div class="mb-3">
                <label>Email</label>
                <input id="email" name="email" class="form-control" type="email" required />
            </div>

            <div class="mb-3">
                <label>Username</label>
                <input id="username" name="username" class="form-control" type="text" required />
            </div>

            <div class="mb-3">
                <label>Password</label>
                <input id="password" name="password" class="form-control" type="password" required />
            </div>

            <button type="submit" class="btn btn-success w-100">Create Account</button>
        </form>

        <p class="mt-3 text-center mb-0">
            Already have an account? <a href="/Account/Login">Login here</a>.
        </p>
    </div>
</div>
