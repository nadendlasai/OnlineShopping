<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - OnlineShopping</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body class="@((ViewBag.DarkBackground ?? false) ? "bg-black" : "")">

    @* 🔹 Show navbar ONLY when HideHeader is NOT true *@
    @if (!(ViewBag.HideHeader ?? false))
    {
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
            <div class="container">
                <a class="navbar-brand" href="/">OnlineShopping</a>
                <div>
                    <a class="btn btn-outline-light btn-sm me-2" href="/Account/Login">Login</a>
                    <a class="btn btn-primary btn-sm" href="/Account/Register">Sign Up</a>
                </div>
            </div>
        </nav>
    }

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
